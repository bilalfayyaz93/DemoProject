<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="float-left">
			<p class="lead"><%= comment.body %></p>
			<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
		</div>

		<div class="float-right ">
			<% if comment.user == current_user %>
        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "primary-btn delete" %>
			<% end %>
		</div>
	</div>
<% end %>
