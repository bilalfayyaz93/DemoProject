
<h1>Products</h1>

<%=render 'header/navbar' %>
<table class="table">
  <thead>
    <tr>
      <th>Supplier</th>
      <th>Title</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= Product.joins(:user).select('users.name as name').where("products.id = #{product.id}").first.name %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price.to_s %></td>
        <td><%= link_to 'Show', product %></td>

        <%if current_user && current_user.products.exists?(product.id)%>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>
            <td><%= link_to 'Add To Cart', add_to_cart_product_path(product), method: :put %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%if current_user%>
  <%= link_to 'Upload A Product', new_product_path %>
<%else%>
  <h3><%=link_to :'login here to create post', new_user_session_path %></h3>
<%end%>
