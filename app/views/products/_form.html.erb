<div class= "d-flex justify-content-center" >
<%= form_with(model: product, local: true, class: "form") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, min: 0 ,step: :any, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity,value: 1, min: 1,  class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :photos %>
    <%= form.file_field :photos, multiple: true %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit "SAVE" ,class: "btn btn-dark" %>
  </div>
<% end %>
</div>
<br>
<%if product%>
<div class = "container">
  <div class="col-lg-12">
    <div class = "row">
      <%product.photos.each_with_index do |photo, index|%>
          <div class = "col-lg-4">
            <%= link_to raw("<span class='fa fa-times'></span>"), delete_image_product_path({img_id: photo.id, id: @product.id}),method: :delete, data: { confirm: 'Are you sure?' }  %>
            <%= image_tag(photo, class: 'img' )%>
          </div>
      <%end%>
    </div>
  </div>
</div>
<%end%>
