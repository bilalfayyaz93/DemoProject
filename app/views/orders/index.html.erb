<div class = "container">
  <h1>Customer Info</h1>
  <ul class="list-group">
    <li class="list-group-item"><strong>Name: </strong> <span class = "float-right"><%=current_user.name.capitalize%></span> </li>
    <li class="list-group-item"><strong>Orders count: </strong> <span class = "float-right"><%=current_user.orders.count%></span> </li>
  </ul>
</div>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Checkout date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Show Order', order, class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

