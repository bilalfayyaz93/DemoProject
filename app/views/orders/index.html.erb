<div class='breadcrumbs'>
  <div class='inner'>
    <ul class='cf'>
      <li>
        <%= link_to raw("<span>1</span><span>Home</span>"), products_path%>
      </li>
      <li>
        <%= link_to raw("<span>2</span><span>Shop</span>"), products_path%>
      </li>
      <li>
        <%= link_to raw("<span>3</span><span>My Products</span>"), user_products_products_path,class: ''%>
      </li>
      <li>
        <a class="active"><span>4</span><span>My Orders</span> </a>
      </li>
      <li>
        <%= link_to raw("<span>5</span><span>My Cart</span>"), cart_path,class: ''%>
      </li>
    </ul>
  </div>
</div>
<div class = "container">
  <h3>Customer Info</h3>
  <ul class="list-group">
    <li class="list-group-item"><strong>Name: </strong> <span class = "float-right"><%=current_user.name.capitalize%></span> </li>
    <li class="list-group-item"><strong>Orders count: </strong> <span class = "float-right"><%=current_user.orders.count%></span> </li>
  </ul>
</div>
<section class="shop-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                      <table>
                        <thead>
                          <tr>
                            <th>Order ID</th>
                            <th>Checkout date</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>
                      <tbody>
                      <% @orders.each do |order| %>
                        <tr>
                          <td><%= order.id %></td>
                          <td><%= order.created_at %></td>
                          <td><%= link_to 'Show Order', order, class:"primary-btn" %></td>
                        </tr>
                        <% end %>
                      </tbody>
                      </table>
                    </div>
                </div>
            </div>

        </div>
    </section>


